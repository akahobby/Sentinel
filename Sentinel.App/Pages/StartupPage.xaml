<Page
    x:Class="Sentinel.App.Pages.StartupPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:models="using:Sentinel.Core.Models"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="28,24,28,24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="8">
            <TextBlock Text="Startup" FontSize="28" FontWeight="SemiBold" />
            <TextBlock Text="Items that run at sign-in. Disable to speed up boot." FontSize="14" Opacity="0.9" TextWrapping="Wrap" MaxWidth="560" />
        </StackPanel>

        <!-- Toolbar -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="16" Margin="0,24,0,20">
            <ProgressRing IsActive="{Binding IsLoading}" Width="24" Height="24" VerticalAlignment="Center" />
            <TextBlock Text="{Binding StatusText}" FontSize="14" VerticalAlignment="Center" Foreground="#B0B0B0" Margin="12,0,0,0" />
        </StackPanel>

        <!-- List -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="12">
                <controls:ListView x:Name="StartupList" ItemsSource="{Binding Items}" SelectionMode="None" Background="Transparent" BorderThickness="0">
                    <controls:ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:StartupItem">
                            <Border Background="#2A2A2A" CornerRadius="12" Padding="20,14" Margin="0,0,0,8" BorderBrush="#404040" BorderThickness="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" MinWidth="120" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Spacing="8" VerticalAlignment="Center">
                                        <TextBlock Text="{x:Bind Name}" FontSize="16" FontWeight="SemiBold" TextTrimming="CharacterEllipsis" />
                                        <TextBlock Text="{x:Bind Command}" FontSize="13" Opacity="0.85" TextTrimming="CharacterEllipsis" MaxLines="1" />
                                        <TextBlock Text="{x:Bind Location}" FontSize="12" Opacity="0.75" />
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" Text="{x:Bind StatusLabel}" FontSize="12" Foreground="#888" VerticalAlignment="Center" Margin="0,0,16,0" />
                                    <ToggleSwitch Grid.Column="2" IsOn="{x:Bind IsEnabled, Mode=TwoWay}" Toggled="StartupToggle_Toggled" OnContent="" OffContent="" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </controls:ListView.ItemTemplate>
                </controls:ListView>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
