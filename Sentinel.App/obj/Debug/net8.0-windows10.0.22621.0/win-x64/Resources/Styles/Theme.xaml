<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Spacing tokens -->
    <x:Double x:Key="SpacingXs">6</x:Double>
    <x:Double x:Key="SpacingSm">10</x:Double>
    <x:Double x:Key="SpacingMd">14</x:Double>
    <x:Double x:Key="SpacingLg">20</x:Double>
    <x:Double x:Key="SpacingXl">28</x:Double>
    <x:Double x:Key="SpacingXxl">36</x:Double>

    <!-- Page padding (Thickness for Grid etc.) -->
    <Thickness x:Key="PagePadding">28,24,28,24</Thickness>

    <!-- Corner radius tokens -->
    <CornerRadius x:Key="CornerRadiusCard">12</CornerRadius>
    <CornerRadius x:Key="CornerRadiusControl">10</CornerRadius>
    <CornerRadius x:Key="CornerRadiusPill">999</CornerRadius>
    <CornerRadius x:Key="ControlCornerRadius">4</CornerRadius>

    <!-- WinUI TabView/NavigationView theme fallbacks -->
    <x:Double x:Key="TabViewItemAddButtonFontSize">12</x:Double>
    <x:Double x:Key="TabViewItemAddButtonWidth">32</x:Double>
    <x:Double x:Key="TabViewItemAddButtonHeight">32</x:Double>
    <x:Double x:Key="TabViewWidth">200</x:Double>
    <Thickness x:Key="TabViewItemAddButtonMargin">0,0,8,0</Thickness>
</ResourceDictionary>

