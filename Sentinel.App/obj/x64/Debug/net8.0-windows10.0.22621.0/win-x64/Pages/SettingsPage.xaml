<Page
    x:Class="Sentinel.App.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel Padding="24" Spacing="24">
            <TextBlock Text="Settings" Style="{StaticResource TitleTextStyle}" />
            <TextBlock Text="Theme, retention, logs, and admin." Style="{StaticResource CaptionTextStyle}" />
            <TextBlock Text="Theme" Style="{StaticResource SectionTextStyle}" />
            <ComboBox x:ConnectionId='2' x:Name="ThemeCombo" HorizontalAlignment="Left" Width="200"
                ItemsSource="{Binding Themes}"
                SelectedItem="{Binding SelectedTheme, Mode=TwoWay}" />
            <TextBlock Text="Sampling interval (sec)" Style="{StaticResource BodyTextStyle}" />
            <Slider Minimum="1" Maximum="10" Value="{Binding SamplingIntervalSeconds, Mode=TwoWay}" StepFrequency="1" Width="200" />
            <TextBlock Text="Retention (days)" Style="{StaticResource BodyTextStyle}" />
            <Slider Minimum="1" Maximum="90" Value="{Binding RetentionDays, Mode=TwoWay}" StepFrequency="1" Width="200" />
            <ToggleSwitch Header="Include scheduled tasks in startup" IsOn="{Binding IncludeScheduledTasksInStartup, Mode=TwoWay}" />
            <StackPanel Orientation="Horizontal" Spacing="12">
                <Button Content="Open logs folder" Command="{Binding OpenLogsFolderCommand}" />
                <Button Content="Relaunch as Admin" Command="{Binding RelaunchAsAdminCommand}" />
            </StackPanel>
            <TextBlock Text="{Binding StatusText}" Style="{StaticResource BodyTextStyle}" />
        </StackPanel>
    </ScrollViewer>
</Page>

